---
import Base from '../../layouts/base.astro';
import Update from "../../components/updates/update"
import { unhypen } from '../../utils/utils';

const {id} = Astro.params;
const title = unhypen(id)
---

<Base title={title + "- Ishan's Quips"} footer={false}>
    <div>
        <Update hash={id} client:load />
    </div>
</Base>
<style is:inline>
    #update{
        font-family: "Hubot Sans", system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }
    strong{
        font-weight: 700;
    }
    h2{
        font-size: 1.8rem;
        padding: 1rem 0;
        font-weight: 700;
    }
    .utterances{
        max-width: 80%;
    }
    h3{
        font-size: 1.5rem;
        font-weight: 600;
    }
    p{
        font-size: 1.2rem;
        font-weight: 400;
        line-height: 2.6rem;
    }
    li{
        font-size: 1.2rem;
        font-weight: 400;
        line-height: 2.6rem;
    }
    ol{
        padding: 0.5rem 1.2rem;
        list-style: decimal;
    }
    #update a{
        text-decoration: underline;
    }

    @media screen and (max-width: 728px){
        p{
            line-height: 2rem;
        }
        .utterances{
            max-width: 100%;
        }
    }
</style>