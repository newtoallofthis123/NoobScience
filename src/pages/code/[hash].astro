---
import Base from "../../layouts/base.astro";
import HomeNav from "../../components/navigation/home_nav";
import { hypens } from "../../utils/utils";

const { hash } = Astro.params;

const res = await fetch(`http://${Astro.url.host}/api/code/${hash}`)
const data = await res.json()
---

<Base title={data.title + " | NoobPaste Mini"} color="#fff" bg="#300a24" selection_only={false} selection_bg="#fff" selection_color="#000">
    <HomeNav title="NoobPaste Mini" color="#fff" bg="#300a24" client:load />
    <div class="font-mono p-8">
        <h1 class="text-2xl font-bold my-4">
            <span class="text-green-400">{hypens(data.author)}@noobscience</span>:<span class="text-blue-300">~</span>$cat ./{data.title}
        </h1>
        <div class="my-4">
            <p class="text-lg my-2">
                {data.lang}
            </p>
            <pre class=`hls ${data.lang}`>
                <code class=`language-${data.lang}`>
{data.content}
                </code>
            </pre>
        </div>
    </div>
</Base>
<style is:inline>
    code{
        font-family: "Fira Code Variable", 'Courier New', Courier, monospace;
        font-size: 1.1rem;
        padding: 0.5rem;
        border-radius: 0.5rem;
    }
</style>
<script>
    import hljs from 'highlight.js';
    hljs.highlightAll();
</script>